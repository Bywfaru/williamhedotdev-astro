---
export type TerminalManSectionProps = {
  title: string;
};
type Props = TerminalManSectionProps;

const { title } = Astro.props;
---

<div>
  <span class:list={['uppercase', 'font-bold']}>{title}</span>

  <div
    class:list={[
      'pl-[calc(1rem*4)]',
      'md:pl-[calc(1rem*7)]',
      'flex',
      'flex-col',
      'transition-all',
    ]}
  >
    <slot />
  </div>
</div>
