---
import type { JSX } from 'astro/jsx-runtime';
import { Button } from '../../general/Button';
import { IconButton } from '../../general/IconButton/IconButton';
import NameLogo from '../../general/NameLogo.astro';

export type HeroProps = {
  socials?: {
    Icon: JSX.Element;
    href: string;
  }[];
};
type Props = HeroProps;

const { socials } = Astro.props;
---

<script>
  import { gsap } from '@/utils';

  const subheading = document.querySelector('.heroSubheading');
  const socials = document.querySelector('.heroSocials');
  const getInTouch = document.querySelector('.heroGetInTouch');

  const timeline = gsap.timeline({
    delay: 1.5,
    defaults: {
      delay: -0.25,
      duration: 0.5,
    },
  });

  timeline
    .to(subheading, {
      opacity: 1,
      y: 0,
    })
    .to(socials, {
      opacity: 1,
      y: 0,
    })
    .to(getInTouch, {
      opacity: 1,
      y: 0,
    });
</script>

<section
  id="hero"
  class:list={[
    'w-full',
    'flex',
    'flex-col',
    'gap-10',
    'justify-center',
    'h-screen',
  ]}
>
  <div
    class:list={[
      'flex',
      'flex-col',
      'gap-5',
      'w-full',
      'md:flex-row',
      'md:justify-between',
      'md:gap-20',
      '[&>*]:md:flex-1',
    ]}
  >
    <div>
      <h1 class:list={['sr-only']}>William He</h1>
      <div class:list={['w-full', 'md:hidden']}>
        <NameLogo size={286} />
      </div>

      <div class:list={['w-full', 'hidden', 'md:block']}>
        <NameLogo size="100%" />
      </div>
    </div>

    <div class:list={['flex', 'flex-col', 'gap-10', 'md:items-end']}>
      {
        !!(Astro.slots.has('subheading') || socials?.length) && (
          <div class:list={['flex', 'flex-col', 'gap-5', 'md:items-end']}>
            {Astro.slots.has('subheading') && (
              <h2
                class:list={[
                  'heroSubheading',
                  'opacity-0',
                  'translate-y-12',
                  'text-accent-1',
                  'font-mono',
                  'text-xl',
                  'md:text-3xl',
                  'md:text-right',
                ]}
              >
                <slot name="subheading" />
              </h2>
            )}

            {!!socials?.length && (
              <div
                class:list={[
                  'heroSocials',
                  'opacity-0',
                  'translate-y-12',
                  'flex',
                  'gap-5',
                ]}
              >
                {socials.map(({ Icon, href }) => (
                  <IconButton type="link" size={48} href={href}>
                    <Icon />
                  </IconButton>
                ))}
              </div>
            )}
          </div>
        )
      }

      <div class:list={['heroGetInTouch', 'opacity-0', 'translate-y-12']}>
        <Button type="link" href="#contact">Get in touch</Button>
      </div>
    </div>
  </div>
</section>
