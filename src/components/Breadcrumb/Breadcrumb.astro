---
import clsx from 'clsx';
import { ChevronLeft } from 'lucide-react';
import { Button } from '../pageSpecific/home/general/Button';

export type BreadcrumbLink = {
  label: string;
  href: string;
};

export type BreadcrumbProps = {
  links: BreadcrumbLink[];
};
type Props = BreadcrumbProps;

const { links } = Astro.props;
---

{
  !!links.length && (
    <div
      class:list={[
        'flex',
        'gap-2',
        'items-center',
        'text-accent-2',
        'text-xl',
        'flex-wrap',
      ]}
    >
      {links.map((link, index) => (
        <div class:list={['flex', 'gap-2', 'items-center']}>
          <Button
            type="link"
            variant="secondary"
            href={link.href}
            className={clsx(['text-ellipsis', 'line-clamp-1'])}
          >
            {link.label}
          </Button>

          {index < links.length - 1 && <ChevronLeft />}
        </div>
      ))}
    </div>
  )
}
